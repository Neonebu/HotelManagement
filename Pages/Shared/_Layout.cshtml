<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <nav class="navbar" style="background-color:gold;">
        <ul style=" list-style-type: none; margin: 0; padding: 0;">
            <li style="display:inline;"><a asp-area="" asp-page="/Index">Home</a></li>
            <li style="display:inline;"><a asp-area="" asp-page="/Privacy">Privacy</a></li>
        </ul>
    </nav>
</head>
<body>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
